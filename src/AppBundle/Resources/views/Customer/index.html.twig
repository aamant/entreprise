{% extends 'layout/layout.html.twig' %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading"><h1>Clients</h1></div>
        <div class="panel-body">
            <table class="table table-striped table-dynamic" data-order="[[ 0, &quot;asc&quot; ], [ 2, &quot;asc&quot; ]]">
                <thead>
                <tr>
                    <th>Societe</th>
                    <th>Prenom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Ville</th>
                    <th data-orderable="false">&nbsp;</th>
                </tr>
                </thead>
                <tbody>
                {% for customer in customers %}
                    <tr>
                        <td><strong>{{ customer.name }}</strong></td>
                        <td>{{ customer.firstname }}</td>
                        <td>{{ customer.lastname }}</td>
                        <td><a href="mailto:{{ customer.email }}">{{ customer.email }}</a></td>
                        <td>{{ customer.city }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{  path('customer.view', {'id': customer.id})  }}" type="button" class="btn btn-default">DÃ©tail</a>
                                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('customer_edit', {'id': customer.id}) }}">Editer</a></li>
                                    <li><a href="{{ path('customer_delete') }}">Supprimer</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}