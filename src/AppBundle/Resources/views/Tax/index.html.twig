{% extends 'layout/layout.html.twig' %}

{% block main -%}
    <div class="row">
        <div class="col-xs-12 text-right">

        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h1>Cotisations</h1></div>
                <div class="panel-body">
                    <table class="table table-responsive table-dynamic">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Month</th>
                            <th>Year</th>
                            <th>Estimate</th>
                            <th>Value</th>
                            <th data-orderable="false">&nbsp;</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.id }}</td>
                                <td>{{ entity.month }}</td>
                                <td>{{ entity.year }}</td>
                                <td>{{ entity.estimate }}</td>
                                <td>{{ entity.value }}</td>
                                <td class="text-right"><a class="btn btn-default btn-sm" href="{{ path('tax_edit', { 'id': entity.id }) }}">Modifier</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block menusidebar %}

{% endblock %}
