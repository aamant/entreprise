{% extends 'layout/layout.html.twig' %}

{% block main %}
<h1 class="page-header">Clients</h1>

<table class="table table-hover">
    <tr>
        <th>Societe</th>
        <th>Prenom</th>
        <th>Nom</th>
        <th>Email</th>
        <th>Ville</th>
        <th>&nbsp;</th>
        <th>&nbsp;</th>
    </tr>
    {% for customer in customers %}
    <tr>
        <td>{{ customer.name }}</td>
        <td>{{ customer.firstname }}</td>
        <td>{{ customer.lastname }}</td>
        <td><a href="mailto:{{ customer.email }}">{{ customer.email }}</a></td>
        <td>{{ customer.city }}</td>
        <td><a href="{{ path('customer_edit', {'id': customer.id}) }}">Edit</a></td>
        <td><a href="{{ path('customer_delete') }}">Delete</a></td>
    </tr>
    {% endfor %}
</table>
{% endblock %}